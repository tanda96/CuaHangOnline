<RelativeLayout android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:paddingLeft="5dp"
    android:paddingBottom="6dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    >

    <TextView
        android:id="@+id/textviewtenkhachhang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Tên khách hàng"
        android:textColor="#0037ff"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/textviewemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="38dp"
        android:text="Email khách hàng"
        android:textColor="#0037ff"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/textviewtinhtrang"
        android:layout_width="99dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Chờ xác nhân"
        android:textColor="#ff000d"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_toLeftOf="@+id/btnXem" />

    <Button
        android:id="@+id/btnXem"
        android:layout_width="78dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:text="Xem"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp" />

    <Button
        android:id="@+id/btnHuy"
        android:layout_width="76dp"
        android:layout_height="38dp"
        android:layout_alignLeft="@+id/btnXem"
        android:layout_alignTop="@+id/textviewemail"
        android:text="Hủy" />
</RelativeLayout>